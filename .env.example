# Celora Environment Configuration
# Copy this file to .env.local and fill in your actual values

# Next.js
NEXT_PUBLIC_APP_URL=https://celora.net

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Authentication
NEXTAUTH_SECRET=your_nextauth_secret_key
NEXTAUTH_URL=https://celora.net
JWT_SECRET=your_jwt_secret_key

# KMS & Encryption
KMS_MASTER_KEY_ID=default-master-key
ENCRYPTION_KEY_ROTATION_DAYS=30
WALLET_ENCRYPTION_KEY=your_secure_wallet_backup_encryption_key
SEED_PHRASE_ENCRYPTION_KEY=your_seed_phrase_encryption_key
MASTER_ENCRYPTION_KEY=your_master_encryption_key
API_SECRET_KEY=your_api_secret_key
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key

# Feature Flags
ENABLE_VIRTUAL_CARDS=true
ENABLE_CRYPTO_WALLETS=true
ENABLE_CROSS_PLATFORM_TRANSFERS=true
ENABLE_RISK_SCORING=true
ENABLE_PIN_PROTECTION=true
ENABLE_AUDIT_LOGGING=true

# Development/Production
NODE_ENV=development
VERCEL_ENV=development

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_ANALYTICS=false

# API Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_WINDOW_MS=60000

# Security
CORS_ORIGIN=https://celora.net
ALLOWED_DOMAINS=celora.net,www.celora.net,localhost,127.0.0.1

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/celora
POSTGRES_URL=postgresql://user:password@localhost:5432/celora

# Blockchain RPC Endpoints - REAL NETWORK INTEGRATION
# Ethereum
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR-API-KEY
ETHEREUM_SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR-API-KEY
ETHEREUM_PRIVATE_KEY=your-ethereum-private-key-for-transactions

# Solana - QuikNode RPC (Premium Performance)
SOLANA_RPC_URL=your_quiknode_solana_rpc_url
SOLANA_WSS_URL=your_quiknode_solana_wss_url
SOLANA_TESTNET_RPC_URL=https://api.testnet.solana.com
SOLANA_PRIVATE_KEY=your-solana-private-key-base58

# Bitcoin
BITCOIN_RPC_URL=https://your-bitcoin-node-or-service
BITCOIN_TESTNET_RPC_URL=https://your-bitcoin-testnet-node
BITCOIN_PRIVATE_KEY=your-bitcoin-private-key-wif

# Wallet Security (Duplicate removed - already defined above)
# WALLET_ENCRYPTION_KEY=your-32-byte-encryption-key-for-wallet-storage

# External APIs
COINGECKO_API_KEY=your-coingecko-api-key
ALCHEMY_API_KEY=your-alchemy-api-key
BLOCKCHAIR_API_KEY=your-blockchair-bitcoin-api-key

# Feature Control
ENABLE_REAL_BLOCKCHAIN=true