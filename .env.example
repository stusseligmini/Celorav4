# Celora Environment Configuration
# Copy this file to .env.local and fill in your actual values

# Next.js
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Authentication
NEXTAUTH_SECRET=your_nextauth_secret_key
NEXTAUTH_URL=http://localhost:3000

# KMS & Encryption
KMS_MASTER_KEY_ID=default-master-key
ENCRYPTION_KEY_ROTATION_DAYS=30

# Feature Flags
ENABLE_VIRTUAL_CARDS=true
ENABLE_CRYPTO_WALLETS=true
ENABLE_CROSS_PLATFORM_TRANSFERS=true
ENABLE_RISK_SCORING=true
ENABLE_PIN_PROTECTION=true
ENABLE_AUDIT_LOGGING=true

# Development/Production
NODE_ENV=development
VERCEL_ENV=development

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_ANALYTICS=false

# API Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_WINDOW_MS=60000

# Security
CORS_ORIGIN=http://localhost:3000
ALLOWED_DOMAINS=localhost,127.0.0.1

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/celora
POSTGRES_URL=postgresql://user:password@localhost:5432/celora