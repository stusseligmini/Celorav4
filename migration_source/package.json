{
  "name": "celora-platform",
  "version": "2.0.0",
  "description": "Advanced cryptocurrency wallet and banking platform with Next.js frontend and Node.js backend",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:wallet\"",
    "dev:backend": "cd celora-backend && npm run dev",
    "dev:wallet": "cd celora-wallet && npm run dev",
    "build": "npm run build:backend && npm run build:wallet",
    "build:backend": "cd celora-backend && npm run build",
    "build:wallet": "cd celora-wallet && npm run build",
    "start": "npm run start:backend",
    "start:backend": "cd celora-backend && npm start",
    "start:wallet": "cd celora-wallet && npm start",
    "deploy": "powershell -ExecutionPolicy Bypass -File deploy-now.ps1",
    "install:all": "npm install && cd celora-backend && npm install && cd ../celora-wallet && npm install",
    "clean": "cd celora-backend && npm run clean && cd ../celora-wallet && npm run clean",
    "test": "cd celora-backend && npm test",
    "prisma:generate": "cd celora-backend && npm run prisma:generate",
    "prisma:migrate": "cd celora-backend && npm run prisma:migrate"
  },
  "keywords": [
    "cryptocurrency",
    "wallet",
    "solana",
    "ethereum",
    "defi",
    "nextjs",
    "nodejs"
  ],
  "author": "Celora Team",
  "license": "MIT",
  "workspaces": [
    "celora-backend",
    "celora-wallet"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=20.18.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stusseligmini/Celora-platform.git"
  },
  "homepage": "https://www.celora.net",
  "bugs": {
    "url": "https://github.com/stusseligmini/Celora-platform/issues"
  }
}
