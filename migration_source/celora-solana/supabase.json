{
  "project_id": "celora-platform",
  "functions": {
    "serve": {
      "port": 3000,
      "headers": {
        "Cache-Control": "public, max-age=0, s-maxage=86400"
      }
    }
  },
  "static": {
    "hosting": {
      "public": ".next",
      "cleanUrls": true,
      "redirects": [
        {
          "source": "/",
          "destination": "/exchange",
          "type": 301
        }
      ],
      "headers": [
        {
          "source": "**/*.@(js|css)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=31536000, immutable"
            }
          ]
        },
        {
          "source": "**/*.@(jpg|jpeg|gif|png|svg|webp|avif)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=31536000, immutable"
            }
          ]
        }
      ]
    }
  }
}